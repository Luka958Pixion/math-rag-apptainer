Bootstrap: docker
From: python:3.11

%environment
    export PYTHONUNBUFFERED=1

%post
    pip install --upgrade pip
    pip install text-generation

%runscript
    exec python tgi.py

%labels
    Author luka.panic@pixion.co
    Version v0.0.1

%help
    Description:
        A client for Text Generation Inference (TGI) from Hugging Face.

    Build:
        apptainer build tgi_client.sif tgi_client.def

    Usage:
        apptainer run tgi_client.sif